<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .form-label {
            margin-bottom: 0.25rem;
            display: block;
            font-weight: 500;
        }

        .input-field {
            transition: all 0.3s ease;
        }

        .input-field:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.4);
        }

        .btn {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn:hover {
            background-color: #1d4ed8;
            transform: translateY(-2px);
        }
    </style>
</head>

<body class="w-full min-h-screen bg-gray-900 text-white p-10">
    <!-- Back to Home -->
    <div class="mb-8">
        <a href="/profile" class="text-white-600 hover:text-white transition-colors duration-300">
            <i class="fas fa-home mr-2"></i>Back to Home
        </a>
    </div>

    <!-- Edit Profile Section -->
    <div class="bg-gray-800 p-8 rounded-lg shadow-lg max-w-3xl mx-auto">
        <h2 class="text-3xl font-semibold mb-6">Edit Profile</h2>

        <!-- Edit Profile Info Form -->
        <div class="mb-8">
            <h3 class="text-xl font-medium mb-4">Update Profile Info</h3>
            <form autocomplete="off" action="/editProfile" method="POST" class="space-y-6">
                <div>
                    <label for="degree" class="form-label">Select Degree</label>
                    <select id="degree" name="degree" required
                        class="input-field text-gray-700 px-4 py-2 w-full rounded-md border border-gray-400 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Select Degree</option>
                        <option value="BSc">BSc</option>
                        <option value="BTech">BTech</option>
                        <option value="MSc">MSc</option>
                        <option value="MTech">MTech</option>
                    </select>
                </div>

                <div>
                    <label for="branch" class="form-label">Select Branch</label>
                    <select id="branch" name="branch" required
                        class="input-field text-gray-700 px-4 py-2 w-full rounded-md border border-gray-400 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Select Branch</option>
                    </select>
                </div>

                <button type="submit"
                    class="btn bg-blue-600 text-white px-6 py-2 rounded-md shadow hover:bg-blue-500 focus:ring focus:ring-blue-500">
                    Save Changes
                </button>
            </form>
        </div>

        <!-- Change Profile Pic Form -->
        <div>
            <h3 class="text-xl font-medium mb-4">Change Profile Picture</h3>
            <form autocomplete="off" action="/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
                <div>
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="image" id="image" accept="image/*"
                        class="input-field px-4 py-2 w-full rounded-md border border-gray-400 shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-gray-100 text-gray-700">
                </div>

                <button type="submit"
                    class="btn bg-blue-600 text-white px-6 py-2 rounded-md shadow hover:bg-blue-500 focus:ring focus:ring-blue-500">
                    Update Picture
                </button>
            </form>
        </div>
    </div>

    <!-- JavaScript for Dynamic Branch Options -->
    <script>
        const degreeField = document.getElementById('degree');
        const branchField = document.getElementById('branch');

        const branchOptions = {
            "BSc": ["Physics", "Chemistry", "Mathematics", "Biology"],
            "BTech": ["Computer Science", "Electrical", "Mechanical", "Civil", "Information Technology"],
            "MSc": ["Physics", "Chemistry", "Mathematics", "Biology"],
            "MTech": ["Computer Science", "Electrical", "Mechanical", "Civil"]
        };

        degreeField.addEventListener('change', function () {
            const selectedDegree = this.value;
            branchField.innerHTML = '<option value="">Select Branch</option>'; // Reset branch options

            if (branchOptions[selectedDegree]) {
                branchOptions[selectedDegree].forEach(function (branch) {
                    const option = document.createElement('option');
                    option.value = branch;
                    option.textContent = branch;
                    branchField.appendChild(option);
                });
            }
        });
    </script>
</body>

</html>
